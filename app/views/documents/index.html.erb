<% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path,  :method => :delete, class: "btn btn-warning" %>
<% end %>
<%= link_to 'New document', new_document_path, class: "btn btn-primary" %>
<br><br>
<h1>Listing documents</h1>
  <table class = "table table-bordered table-striped">
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
      <% @documents.each do |document| %>
        <tr>
          <td><%= link_to document.title, document_path(document) %></td>
          <td><%= document.description.first(30)%></td>
        </tr>
      <% end %>
  </table>